{
  "name": "ai-omni",
  "displayName": "AI Omni",
  "description": "A VS Code extension that provides OpenAI/Anthropic compatible API by forwarding requests to GitHub Copilot",
  "version": "0.0.1",
  "publisher": "ai-omni",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Machine Learning"
  ],
  "keywords": [
    "copilot",
    "openai",
    "anthropic",
    "api",
    "ai"
  ],
  "icon": "resources/icon.png",
  "activationEvents": [],
  "main": "./dist/extension/index.js",
  "contributes": {
    "commands": [
      {
        "command": "my-extension.open",
        "title": "Open My Webview",
        "icon": "$(window)"
      },
      {
        "command": "aiOmni.refreshSidebar",
        "title": "Refresh Models",
        "icon": "$(refresh)"
      },
      {
        "command": "aiOmni.startServer",
        "title": "AI Omni: Start API Server",
        "icon": "$(play)"
      },
      {
        "command": "aiOmni.stopServer",
        "title": "AI Omni: Stop API Server",
        "icon": "$(debug-stop)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "aiOmniContainer",
          "title": "AI Omni",
          "icon": "resources/sidebar-icon.svg"
        }
      ]
    },
    "views": {
      "aiOmniContainer": [
        {
          "type": "webview",
          "id": "aiOmni.sidebarView",
          "name": "AI Omni",
          "icon": "$(sparkle)",
          "contextualTitle": "AI Omni"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "my-extension.open",
          "when": "view == aiOmni.sidebarView",
          "group": "navigation"
        },
        {
          "command": "aiOmni.refreshSidebar",
          "when": "view == aiOmni.sidebarView",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "AI Omni",
      "properties": {
        "aiOmni.defaultPort": {
          "type": "number",
          "default": 11435,
          "description": "Default port for the API server"
        },
        "aiOmni.autoStart": {
          "type": "boolean",
          "default": false,
          "description": "Automatically start the API server when VS Code opens"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "npm run build:ext && npm run build:web",
    "build:ext": "tsc -p tsconfig.json",
    "build:web": "cd webview && npm run build",
    "watch:ext": "tsc -watch -p tsconfig.json",
    "dev:web": "cd webview && npm run dev",
    "compile": "npm run build:ext",
    "pretest": "npm run compile"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.3.0"
  }
}
